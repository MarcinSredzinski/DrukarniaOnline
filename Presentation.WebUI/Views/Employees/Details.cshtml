@model CoreLibrary.Entities.Employees.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div>
    <h4>Pracownik</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Imię
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
           Nazwisko
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
          Data urodzenia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
           Data rozpoczęcia pracy
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkStartDate)
        </dd>
        <dt class = "col-sm-2">
          Kierownik działu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsManager)
        </dd>
        <dt class = "col-sm-2">
          Dział
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a> |
    <a asp-action="Index">Wróć do listy</a>
</div>
